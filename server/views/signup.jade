doctype
html(lang="en", ng-app="yote")
	head
		title Sunzora 
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(charset="utf-8")
		//- link(href="/favicon.ico", rel="shortcut icon", type="image/x-icon")

		//- styles
		link(rel="stylesheet", href="/css/sunzora-proto.css")

		//- javascripts
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular-route.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.23/angular-touch.js")
		script(src="/lib/angular-ui-router.min.js")

		//- root angular dependencies
		script(src="/app/app.js")
		script(src="/app/directives.js")
		script(src="/app/filters.js")

	body
		div(class="loginPage")
			header
				h2 Sign up for
				img(src="/img/icons/sunzorawhite.png")
			section(class="body")
				div(class="loginForm" ng-controller="UserSignupCtrl")
					form(name="login" ng-submit="loginUser")
						table
							tr
								td
									label Email:
								td
									input(type="text" ng-model="email")
							tr
								td
									label Password:
								td
									input(type="password" ng-model="password")
							tr
								td
									label Confirm Password:
								td
									input(type="password" ng-model="password2")
							tr
								td(colspan=2)
									button(ng-click="signup()") Submit
							tr
								td(colspan=2)
									a(href="/login") Log in
									
		include ng-modules
		include ng-services
		include ng-controllers
		include ng-directives
		include ng-routes